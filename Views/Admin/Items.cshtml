@model IEnumerable<User>

@{
    Layout = "~/views/shared/AdminLayout.cshtml";
    ViewData["Title"] = "View User";
}

<h1>View Users</h1>

<p>
    <a asp-action="NewMember">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                First name
            </th>
            <th>
                Last Name
            </th>

            <th>
               Gender
            </th>
            <th>
               Image
            </th>
            <th>
                Email
            </th>
            <th>
                Password
            </th>
            <th>
                Role Name
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Profile.Fname)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Profile.Lname)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Profile.Gender)
                </td>
                <td>
                    <img src=@Url.Content("~/Images/" + item.Profile.Imagepath)
                         asp-append-version="true" />
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Password)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Role.Rolename)
                </td>
                <td>
                    <a  asp-action="Edit" asp-route-id="@item.Userid">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.Userid">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.Userid">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
