@{
    var roleId = Context.Session.GetInt32("RoleId");
    var Id = Context.Session.GetInt32("id");
}

<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8">
    <title>GYMHERO</title>
    <meta content="width=device-width, initial-scale=1.0" name="viewport">
    <meta content="Free HTML Templates" name="keywords">
    <meta content="Free HTML Templates" name="description">

    <!-- Favicon -->
    <link href="img/favicon.ico" rel="icon">

    <!-- Google Web Fonts -->
    <link rel="preconnect" href="https://fonts.gstatic.com">
    <link href="https://fonts.googleapis.com/css2?family=Oswald:wght@400;500;600;700&family=Rubik&display=swap" rel="stylesheet">

    <!-- Icon Font Stylesheet -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.0/css/all.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.4.1/font/bootstrap-icons.css" rel="stylesheet">
    <link href="~/homedesign/lib/flaticon/font/flaticon.css" rel="stylesheet">

    <!-- Libraries Stylesheet -->
    <link href="~/homedesign/lib/owlcarousel/assets/owl.carousel.min.css" rel="stylesheet">

    <!-- Customized Bootstrap Stylesheet -->
    <link href="~/homedesign/css/bootstrap.min.css" rel="stylesheet">

    <!-- Template Stylesheet -->
    <link href="~/homedesign/css/style.css" rel="stylesheet">
</head>
<body>
    <!-- Header Start -->
    <div class="container-fluid bg-dark px-0">
        <div class="row gx-0">
            <div class="col-lg-3 bg-dark d-none d-lg-block">
                <a asp-action="Index" asp-controller="Home" class="navbar-brand w-100 h-100 m-0 p-0 d-flex align-items-center justify-content-center">
                    <h1 class="m-0 display-4 text-primary text-uppercase">GymHero</h1>
                </a>
            </div>
            <div class="col-lg-9">
               
                
                <nav class="navbar navbar-expand-lg bg-dark navbar-dark p-3 p-lg-0 px-lg-5">
                    <a href="index.html" class="navbar-brand d-block d-lg-none">
                        <h1 class="m-0 display-4 text-primary text-uppercase">Gymster</h1>
                    </a>
                    <button type="button" class="navbar-toggler" data-bs-toggle="collapse" data-bs-target="#navbarCollapse">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="collapse navbar-collapse justify-content-between" id="navbarCollapse">
                        <div class="navbar-nav mr-auto py-0">
                            <a asp-action="Index" asp-controller="Home" class="nav-item nav-link active">Home</a>
                            <a asp-action="AboutUs" asp-controller="Home" class="nav-item nav-link">About</a>
                            <a asp-action="Contact" asp-controller="Home" class="nav-item nav-link">Contact</a>
                           @if(roleId!=null){

                                <a asp-controller="Home" asp-action="Profile" asp-route-id="@Id" class="nav-item nav-link">My Profile</a>
                            }
                        </div>
                        @if (roleId == null)
                        {
                            <a asp-controller="LoginAndRegister" asp-action="Login" class="btn btn-primary py-md-3 px-md-5 d-none d-lg-block">Join Us</a>

                        }
                        else
                        {
                            <a asp-controller="LoginAndRegister" asp-action="Logout" class="btn btn-danger btn-lg">
                                <span class="glyphicon glyphicon-log-out"></span> Log out
                            </a>
                        }
                    </div>
                </nav>
            </div>
        </div>
    </div>
    <!-- Header End -->
    <div>
        @RenderBody()
    </div>
    <!-- Footer Start -->
    <div class="container-fluid bg-dark text-secondary px-5 mt-5">
        <div class="row gx-5 d-flex justify-content-center">
            <div class="col-lg-8 col-md-6">
                <div class="row d-flex justify-content-center gx-5">
                    <div class="col-lg-4 col-md-12 pt-5 mb-5">
                        <h4 class="text-uppercase text-light mb-4">Get In Touch</h4>
                        <div class="d-flex mb-2">
                            <i class="bi bi-geo-alt text-primary me-2"></i>
                            <p class="mb-0">Zarqa - Jordan</p>
                        </div>
                        <div class="d-flex mb-2">
                            <i class="bi bi-envelope-open text-primary me-2"></i>
                            <p class="mb-0">GymHero@info.com</p>
                        </div>
                        <div class="d-flex mb-2">
                            <i class="bi bi-telephone text-primary me-2"></i>
                            <p class="mb-0">+012 345 67890</p>
                        </div>
                        <div class="d-flex mt-4">
                           
                            <a class="btn btn-primary btn-square rounded-circle me-2" href="https://web.facebook.com/omar.sarhan.1848"><i class="fab fa-facebook-f"></i></a>
                            <a class="btn btn-primary btn-square rounded-circle me-2" href="https://www.linkedin.com/in/omar-kh-sarhan/"><i class="fab fa-linkedin-in"></i></a>
                            <a class="btn btn-primary btn-square rounded-circle" href="https://www.instagram.com/omar_sarhan_404/"><i class="fab fa-instagram"></i></a>
                        </div>
                    </div>
                    <div class="col-lg-4 col-md-12 pt-0 pt-lg-5 mb-5">
                        <h4 class="text-uppercase text-light mb-4">Quick Links</h4>
                        <div class="d-flex flex-column justify-content-start">
                            <a class="text-secondary mb-2" asp-action="Index" asp-controller="Home"><i class="bi bi-arrow-right text-primary me-2"></i>Home</a>
                            <a class="text-secondary mb-2" asp-action="AboutUs" asp-controller="Home"><i class="bi bi-arrow-right text-primary me-2"></i>About Us</a>
                            <a class="text-secondary" asp-action="Contact" asp-controller="Home"><i class="bi bi-arrow-right text-primary me-2"></i>Contact Us</a>
                        </div>
                    </div>
                    
                </div>
            </div>
           
        </div>
    </div>
    <div class="container-fluid py-4 py-lg-0 px-5" style="background: #111111;">
        <div class="row gx-5">
            <div class="col-lg-8">
                <div class="py-lg-4 text-center">
                    <p class="text-secondary mb-0">&copy; <a class="text-light fw-bold" asp-action="Index">GymHero</a>. All Rights Reserved.</p>
                </div>
            </div>
            
        </div>
    </div>
    <!-- Footer End -->
    <!-- Back to Top -->
    <a href="#" class="btn btn-dark py-3 fs-4 back-to-top"><i class="bi bi-arrow-up"></i></a>


    <!-- JavaScript Libraries -->
    <script src="https://code.jquery.com/jquery-3.4.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/homedesign/lib/easing/easing.min.js"></script>
    <script src="~/homedesign/lib/waypoints/waypoints.min.js"></script>
    <script src="~/homedesign/lib/counterup/counterup.min.js"></script>
    <script src="~/homedesign/lib/owlcarousel/owl.carousel.min.js"></script>

    <!-- Template Javascript -->
    <script src="~/homedesign/js/main.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>

